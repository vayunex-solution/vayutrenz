# Backend Production Environment Variables
# Copy this to .env and fill in your actual values

# ============ DATABASE ============
# For Hostinger MySQL:
DATABASE_URL="mysql://username:password@localhost:3306/schooldost_db"

# ============ SERVER ============
PORT=5000
NODE_ENV=production

# ============ JWT ============
# Generate a strong random key (min 32 chars)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_123456

# ============ FRONTEND URL ============
# Your actual domain
FRONTEND_URL=https://schooldost.com

# ============ EMAIL (SMTP) ============
# For password reset & verification
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=noreply@schooldost.com
SMTP_PASS=your_email_password

# ============ GOOGLE OAUTH (Optional) ============
# Get from Google Cloud Console
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_CALLBACK_URL=https://api.schooldost.com/api/auth/google/callback

# ============ UPLOADS ============
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
